<h1> Create Account </h1>

<%= form_for(:account, :url => {:action => 'create'}) do |f| %>

  <label for="account_name">name </label>
  <%= f.text_field(:name) %><br />

  <label for="account_user_id">belongs_to</label>
  <%= f.text_field(:user_id) %><br />

  <label for="account_balance">balance</label>
  <%= f.text_field(:balance) %><br />

  <label for="account_account_number">account number</label>
  <%= f.text_field(:account_number) %><br />

  <label for="account_description">description</label>
  <%= f.text_field(:description) %><br />

  <%= submit_tag("Create Account") %>

<% end %>