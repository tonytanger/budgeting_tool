<% if @account.errors.any? %>
  <div class="error_explanation">
    <div class="error-title"> 
      There <%= "is".pluralize(@account.errors.count) %> <%= pluralize(@account.errors.count, "error") %> in this form!
    </div>
    <ul>
      <% @account.errors.full_messages.each do |message| %>
      <li class="error-message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= f.label(:name) %>
<%= f.text_field(:name) %>

<%= f.label(:balance, "Balance ($)") %>
<%= f.text_field(:balance) %>

<%= f.label(:account_number) %>
<%= f.text_field(:account_number) %>

<%= f.label(:banking_type) %>
<%= f.select(:banking_type, Account.banking_types.map {|key, val| [key.titleize, key.downcase]}) %>

<%= f.label(:description) %>
<%= f.text_area(:description, size: "10x4") %>
